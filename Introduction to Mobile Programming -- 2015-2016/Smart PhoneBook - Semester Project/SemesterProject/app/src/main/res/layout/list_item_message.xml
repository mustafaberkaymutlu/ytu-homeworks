<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/list_item_message_relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_alignParentRight="false"
        android:background="@drawable/message_background">

        <TextView
            android:id="@+id/list_item_message_messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorTransparent"
            android:textStyle="bold"
            android:textIsSelectable="true"
            android:maxLines="30"
            android:maxEms="8"/>

        <TextView
            android:id="@+id/list_item_message_messageDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_item_message_messageText"
            android:layout_below="@+id/list_item_message_messageText"
            android:textColor="@color/textColorTransparent"
            android:textSize="12sp"/>

    </RelativeLayout>
</RelativeLayout>




